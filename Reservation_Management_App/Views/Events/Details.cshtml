@model Reservation_Management_App.Domain.DomainModels.Event
@using Reservation_Management_App.Web.ViewModels
@{
    var ext = ViewBag.ExternalInfo as EventExternalInfoViewModel;
}
@{
    ViewData["Title"] = Model.Title;
    var img = string.IsNullOrWhiteSpace(Model.PosterImageUrl)
        ? "https://images.unsplash.com/photo-1516450360452-9312f5e86fc7?auto=format&fit=crop&w=1600&q=80"
        : Model.PosterImageUrl;

    var soldOut = Model.AvailableSpots <= 0;
}

<!-- Back Button -->
<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Events
    </a>
</div>

<!-- Hero Image Section -->
<div class="card border-0 overflow-hidden mb-4" style="background: #1a1a1a;">
    <div class="position-relative">
        <img src="@img" class="w-100" style="height:400px; object-fit:cover; opacity: 0.7;" />

        <div class="position-absolute top-0 start-0 end-0 bottom-0"
             style="background: linear-gradient(135deg, rgba(0,0,0,.85), rgba(99,102,241,.3));"></div>

        <!-- Event Title Overlay -->
        <div class="position-absolute top-0 start-0 p-5 text-white" style="max-width: 60%;">
            <div class="mb-2" style="color: #d946ef;">
                <i class="bi bi-geo-alt-fill me-2"></i>@(Model.Location?.Name ?? "Unknown venue")
            </div>
            <h1 class="display-4 fw-bold mb-3">@Model.Title</h1>
            <div style="font-size: 1.1rem; opacity: 0.9;">
                <i class="bi bi-calendar-event me-2"></i>@Model.StartDateTime.ToString("dddd, dd MMMM yyyy")
                <span class="mx-2">•</span>
                <i class="bi bi-clock me-2"></i>@Model.StartDateTime.ToString("HH:mm")
            </div>

            <div class="mt-4 d-flex gap-3 flex-wrap">
                @if (soldOut)
                {
                    <span class="badge" style="background: #ef4444; color: white; padding: 0.6rem 1.2rem; font-size: 1rem; border-radius: 8px;">
                        <i class="bi bi-x-circle me-2"></i>Sold Out
                    </span>
                }
                else
                {
                    <span class="badge" style="background: #10b981; color: white; padding: 0.6rem 1.2rem; font-size: 1rem; border-radius: 8px;">
                        <i class="bi bi-check-circle me-2"></i>@Model.AvailableSpots Spots Available
                    </span>
                }
                <span class="badge" style="background: #f97316; color: white; padding: 0.6rem 1.2rem; font-size: 1rem; border-radius: 8px;">
                    @Model.PricePerPerson.ToString("0") ден per person
                </span>
            </div>
        </div>

        <!-- Reserve Button -->
        <div class="position-absolute bottom-0 end-0 p-5">
            @if (!soldOut && !User.IsInRole("Admin"))
            {
                <a class="btn btn-primary btn-lg px-5 py-3"
                   asp-controller="Reservations" asp-action="Reserve" asp-route-eventId="@Model.Id"
                   style="font-size: 1.1rem; border-radius: 12px;">
                    <i class="bi bi-ticket-perforated me-2"></i>Reserve Your Table
                </a>
            }
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Left Column: Event Info -->
    <div class="col-lg-8">
        <!-- Lineup Card -->
        <div class="card mb-4">
            <div class="card-body p-4">
                <h4 class="mb-4">
                    <i class="bi bi-music-note-beamed me-2" style="color: #d946ef;"></i>Tonight's Lineup
                </h4>

                <!-- Main Act -->
                <div class="d-flex align-items-center gap-4 mb-4 p-3 rounded-3" style="background: rgba(217, 70, 239, 0.05); border: 1px solid #2a2a2a;">
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width:60px; height:60px; background: linear-gradient(135deg, #ec4899, #d946ef);">
                        <i class="bi bi-mic-fill" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <div>
                        <div style="color: #6b7280; font-size: 0.9rem;">Main Act</div>
                        <div class="fw-bold" style="font-size: 1.3rem; color: white;">@(Model.MainAct?.StageName ?? "-")</div>
                    </div>
                </div>

                <!-- DJ -->
                <div class="d-flex align-items-center gap-4 p-3 rounded-3" style="background: rgba(139, 92, 246, 0.05); border: 1px solid #2a2a2a;">
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width:60px; height:60px; background: linear-gradient(135deg, #8b5cf6, #6366f1);">
                        <i class="bi bi-disc-fill" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                    <div>
                        <div style="color: #6b7280; font-size: 0.9rem;">DJ</div>
                        <div class="fw-bold" style="font-size: 1.3rem; color: white;">@(Model.Dj?.StageName ?? "-")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- External API Data Section -->
        @if (User.IsInRole("Admin"))
        {
            <div class="col-12">
                <hr style="border-color: #2a2a2a; margin: 2rem 0;" />

                <div class="d-flex align-items-center gap-2 mb-3">
                    <i class="bi bi-shield-check" style="color: #d946ef; font-size: 1.2rem;"></i>
                    <h4 class="mb-0">Admin Only: External API Data</h4>
                </div>

                @if (ext == null || !ext.HasExternalData)
                {
                    <div class="alert" style="background: rgba(107, 114, 128, 0.1); border: 1px solid #2a2a2a; color: #a0a0a0;">
                        <i class="bi bi-info-circle me-2"></i>
                        No external API data available for this event. Add an <code style="color: #d946ef;">ExternalEventCode</code> (e.g., EVENT001) when editing to enable API integration.
                    </div>
                }
                else
                {
                    <div class="card mb-4" style="border: 2px solid #d946ef;">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h5 class="mb-0">
                                    <i class="bi bi-cloud-download me-2" style="color: #d946ef;"></i>External API Data
                                </h5>
                                <span class="badge" style="background: rgba(217, 70, 239, 0.2); color: #d946ef; padding: 0.5rem 1rem;">
                                    <i class="bi bi-github me-2"></i>Live from GitHub
                                </span>
                            </div>

                            <!-- Cost Breakdown -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-4">
                                    <div class="p-3 rounded-3 text-center" style="background: rgba(139, 92, 246, 0.1); border: 1px solid #2a2a2a;">
                                        <div style="color: #8b5cf6; font-size: 0.85rem; margin-bottom: 0.5rem;">DJ Cost</div>
                                        <div class="fw-bold" style="font-size: 1.5rem; color: white;">@ext.DjCost ден</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-3 rounded-3 text-center" style="background: rgba(236, 72, 153, 0.1); border: 1px solid #2a2a2a;">
                                        <div style="color: #ec4899; font-size: 0.85rem; margin-bottom: 0.5rem;">Main Act Cost</div>
                                        <div class="fw-bold" style="font-size: 1.5rem; color: white;">@ext.MainActCost ден</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-3 rounded-3 text-center" style="background: rgba(249, 115, 22, 0.1); border: 1px solid #2a2a2a;">
                                        <div style="color: #f97316; font-size: 0.85rem; margin-bottom: 0.5rem;">Venue Fee</div>
                                        <div class="fw-bold" style="font-size: 1.5rem; color: white;">@ext.VenueFee ден</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Total Cost (Transformation) -->
                            <div class="p-4 rounded-3 text-center mb-4" style="background: linear-gradient(135deg, rgba(217, 70, 239, 0.2), rgba(99, 102, 241, 0.2)); border: 2px solid #d946ef;">
                                <div style="color: #d946ef; font-size: 1rem; margin-bottom: 0.5rem; font-weight: 600;">
                                    <i class="bi bi-calculator me-2"></i>Total Night Operating Cost (Calculated)
                                </div>
                                <div class="fw-bold" style="font-size: 2.5rem; color: white;">@ext.TotalNightCost ден</div>
                                <small style="color: #a0a0a0;">
                                    <i class="bi bi-info-circle me-1"></i>This is a transformation: DJ + Main Act + Venue costs combined
                                </small>
                            </div>

                            <!-- Timeline (Transformed) -->
                            <div class="p-4 rounded-3" style="background: rgba(0, 0, 0, 0.3); border: 1px solid #2a2a2a;">
                                <h6 style="color: #d946ef; margin-bottom: 1rem;">
                                    <i class="bi bi-clock-history me-2"></i>Event Timeline (Transformed Format)
                                </h6>
                                <p style="color: white; font-size: 1.1rem; margin-bottom: 0; line-height: 1.8;">
                                    @ext.Timeline
                                </p>
                            </div>

                            <!-- API Source Badge -->
                            <div class="text-center mt-4">
                                <small style="color: #6b7280;">
                                    <i class="bi bi-database me-2"></i>Data Source: <strong style="color: #d946ef;">@ext.Source</strong>
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Right Column: Sidebar -->
    <div class="col-lg-4">
        <!-- Venue Info Card -->
        <div class="card mb-4">
            <div class="card-body p-4">
                <h5 class="mb-3">
                    <i class="bi bi-building me-2" style="color: #f97316;"></i>Venue Details
                </h5>

                <div class="mb-3">
                    <div style="color: #6b7280; font-size: 0.85rem;">Venue</div>
                    <div class="fw-bold" style="color: white;">@(Model.Location?.Name ?? "Unknown")</div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Location?.Address))
                {
                    <div class="mb-3">
                        <div style="color: #6b7280; font-size: 0.85rem;">Address</div>
                        <div style="color: #a0a0a0;">@Model.Location.Address</div>
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.Location?.PhoneNumber))
                {
                    <div class="mb-3">
                        <div style="color: #6b7280; font-size: 0.85rem;">Contact</div>
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-telephone-fill" style="color: #10b981;"></i>
                            <a href="tel:@Model.Location.PhoneNumber" style="color: #10b981; text-decoration: none;">
                                @Model.Location.PhoneNumber
                            </a>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.Location?.City))
                {
                    <div class="mb-3">
                        <div style="color: #6b7280; font-size: 0.85rem;">City</div>
                        <div style="color: #a0a0a0;">@Model.Location.City</div>
                    </div>
                }

                @if (Model.Location?.Capacity != null)
                {
                    <div class="mb-3">
                        <div style="color: #6b7280; font-size: 0.85rem;">Capacity</div>
                        <div style="color: #a0a0a0;">@Model.Location.Capacity people</div>
                    </div>
                }
            </div>
        </div>

        <!-- Reservation Rules Card -->
        <div class="card">
            <div class="card-body p-4">
                <h5 class="mb-3">
                    <i class="bi bi-info-circle me-2" style="color: #10b981;"></i>Reservation Rules
                </h5>

                <ul style="color: #a0a0a0; padding-left: 1.2rem; margin-bottom: 0;">
                    <li class="mb-2">Group size: <strong style="color: white;">2-6 people</strong></li>
                    <li class="mb-2">Entry price: <strong style="color: #f97316;">@Model.PricePerPerson ден per person</strong></li>
                    <li class="mb-2">Cancellation: <strong style="color: white;">24+ hours before event</strong></li>
                    <li class="mb-2">Status: <strong style="color: #eab308;">Pending approval</strong></li>
                </ul>
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="card mt-4" style="border: 1px solid #d946ef;">
                <div class="card-body p-3">
                    <h6 style="color: #d946ef; margin-bottom: 1rem;">
                        <i class="bi bi-shield-check me-2"></i>Admin Actions
                    </h6>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary flex-grow-1">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger flex-grow-1">
                            <i class="bi bi-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>