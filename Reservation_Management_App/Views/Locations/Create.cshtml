@model Reservation_Management_App.Domain.DomainModels.Location
@{
    ViewData["Title"] = "Add Location";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex align-items-center gap-3 mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Locations
        </a>
    </div>
    <h1><i class="bi bi-geo-alt-fill" style="color: #f97316;"></i> Add New Location</h1>
    <p style="color: #a0a0a0;">Create a new venue or location</p>
</div>

<!-- Create Form Card -->
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Venue Name -->
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="control-label">Venue Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Club Neon" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Address -->
                    <div class="form-group mb-4">
                        <label asp-for="Address" class="control-label">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="123 Main Street" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- PhoneNumber -->
                    <div class="form-group mb-4">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="+389 XX XXX XXX" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <small class="form-text" style="color: #6b7280;">
                            <i class="bi bi-info-circle me-1"></i>Contact number for this venue
                        </small>
                    </div>

                    <!-- Venue Type & Capacity Row -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Type" class="control-label">Venue Type</label>
                                <select asp-for="Type" class="form-select">
                                    <option value="">-- Select type --</option>
                                    <option value="Club">Club</option>
                                    <option value="Bar">Bar</option>
                                    <option value="Concert Hall">Concert Hall</option>
                                    <option value="Lounge">Lounge</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Capacity" class="control-label">Capacity</label>
                                <input asp-for="Capacity" type="number" class="form-control" placeholder="500" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- City -->
                    <div class="form-group mb-4">
                        <label asp-for="City" class="control-label">City</label>
                        <input asp-for="City" class="form-control" placeholder="Skopje" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <!-- Image URL -->
                    <div class="form-group mb-4">
                        <label asp-for="ImageUrl" class="control-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/venue.jpg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <small class="form-text" style="color: #6b7280;">
                            <i class="bi bi-info-circle me-1"></i>Direct link to venue image
                        </small>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 mt-4">
                        <a asp-action="Index" class="btn btn-secondary flex-grow-1">
                            <i class="bi bi-x-lg me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-check-lg me-2"></i>Add Location
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}