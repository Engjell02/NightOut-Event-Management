@model IEnumerable<Reservation_Management_App.Domain.DomainModels.Reservation>
@{
    ViewData["Title"] = "My Reservations";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1>
                <i class="bi bi-bookmark-check" style="color: #d946ef;"></i> My Reservations
            </h1>
            <p style="color: #a0a0a0;">Your bookings and their status.</p>
        </div>
        <a class="btn btn-secondary" asp-controller="Events" asp-action="Index">
            <i class="bi bi-calendar-event me-2"></i>Browse Events
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-4">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-4">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        You have no reservations yet. <a asp-controller="Events" asp-action="Index" style="color: #d946ef; font-weight: 600;">Browse events</a> to make your first booking!
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var r in Model)
        {
            var e = r.Event;
            var img = string.IsNullOrWhiteSpace(e?.PosterImageUrl)
            ? "https://images.unsplash.com/photo-1516450360452-9312f5e86fc7?auto=format&fit=crop&w=1600&q=80"
            : e!.PosterImageUrl;

            var isPending = r.Status == Reservation_Management_App.Domain.DomainModels.Enums.ReservationStatus.Pending;
            var isApproved = r.Status == Reservation_Management_App.Domain.DomainModels.Enums.ReservationStatus.Approved;
            var isRejected = r.Status == Reservation_Management_App.Domain.DomainModels.Enums.ReservationStatus.Rejected;
            var isCancelled = r.Status == Reservation_Management_App.Domain.DomainModels.Enums.ReservationStatus.Cancelled;

            // Check if can cancel (24h+ before event and not already cancelled/rejected)
            var canCancel = !isCancelled && !isRejected && e?.StartDateTime > DateTime.UtcNow.AddHours(24);

            <div class="col-12 col-lg-6">
                <div class="card h-100" style="overflow: hidden;">
                    <!-- Event Image with Status Badge -->
                    <div class="position-relative">
                        <img src="@img" class="w-100" style="height: 200px; object-fit: cover;" alt="@e?.Title" />

                        <!-- Status Badge (Top Right) -->
                        <div class="position-absolute top-0 end-0 m-3">
                            @if (isApproved)
                            {
                                <span class="badge" style="background: #10b981; color: white; padding: 0.5rem 1rem; font-size: 0.85rem; border-radius: 8px;">
                                    <i class="bi bi-check-circle me-1"></i>APPROVED
                                </span>
                            }
                            else if (isPending)
                            {
                                <span class="badge" style="background: #eab308; color: #000; padding: 0.5rem 1rem; font-size: 0.85rem; border-radius: 8px;">
                                    <i class="bi bi-clock me-1"></i>PENDING
                                </span>
                            }
                            else if (isRejected)
                            {
                                <span class="badge" style="background: #ef4444; color: white; padding: 0.5rem 1rem; font-size: 0.85rem; border-radius: 8px;">
                                    <i class="bi bi-x-circle me-1"></i>REJECTED
                                </span>
                            }
                            else if (isCancelled)
                            {
                                <span class="badge" style="background: #6b7280; color: white; padding: 0.5rem 1rem; font-size: 0.85rem; border-radius: 8px;">
                                    <i class="bi bi-slash-circle me-1"></i>CANCELLED
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-4">
                        <!-- Event Title & Price -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="mb-0" style="color: white; font-weight: 700;">@e?.Title</h5>
                            <div style="color: #f97316; font-weight: 700; font-size: 1.1rem;">
                                @((e?.PricePerPerson ?? 0).ToString("0")) ден
                            </div>
                        </div>

                        <!-- Event Details -->
                        <div class="mb-3" style="color: #a0a0a0; font-size: 0.9rem;">
                            <div class="mb-1">
                                <i class="bi bi-geo-alt-fill me-2" style="color: #d946ef;"></i>@e?.Location?.Name
                            </div>
                            <div class="mb-1">
                                <i class="bi bi-calendar-event me-2" style="color: #d946ef;"></i>@e?.StartDateTime.ToString("dd MMM yyyy")
                                <span class="mx-2">•</span>
                                <i class="bi bi-clock me-2" style="color: #d946ef;"></i>@e?.StartDateTime.ToString("HH:mm")
                            </div>
                        </div>

                        <hr style="border-color: #2a2a2a; margin: 1rem 0;" />

                        <!-- Reservation Info -->
                        <div style="font-size: 0.9rem;">
                            <div class="mb-2">
                                <span style="color: #6b7280;">Reservation:</span>
                                <strong style="color: white;">@r.ReservationName</strong>
                            </div>
                            <div class="mb-2">
                                <span style="color: #6b7280;">People:</span>
                                <strong style="color: white;">@r.NumberOfPeople</strong>
                            </div>
                            <div class="mb-2">
                                <span style="color: #6b7280;">Phone:</span>
                                <strong style="color: white;">@r.PhoneNumber</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer bg-transparent border-0 p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <small style="color: #6b7280;">
                                Created: @r.CreatedAt.ToString("dd MMM") • @r.CreatedAt.ToString("HH:mm")
                            </small>

                            <div class="d-flex gap-2">
                                <!-- Details Button (Always visible) -->
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@r.EventId"
                                   class="btn btn-sm btn-secondary">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>

                                <!-- Cancel Button (Only if cancellable) -->
                                @if (canCancel)
                                {
                                    <form asp-action="Cancel" asp-route-id="@r.Id" method="post" class="m-0"
                                          onsubmit="return confirm('Are you sure you want to cancel this reservation? This cannot be undone.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-x-lg me-1"></i>Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">