<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NightOut</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Dark Navbar -->
    <!-- Dark Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <!-- Logo with Purple Icon -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="d-flex align-items-center justify-content-center rounded-3 me-2"
                         style="width: 40px; height: 40px; background: linear-gradient(135deg, #d946ef, #ec4899);">
                        <span style="font-weight: 800; font-size: 1.5rem; color: white;">N</span>
                    </div>
                    <span style="font-weight: 800; font-size: 1.25rem;">NightOut</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <i class="bi bi-list" style="color: white; font-size: 1.5rem;"></i>
                </button>

                <!-- Nav Links -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    @if (User.IsInRole("Admin"))
                    {
                        <!-- ADMIN NAVIGATION -->
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                    <i class="bi bi-grid me-2"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Events" asp-action="Index">
                                    <i class="bi bi-calendar-event me-2"></i>Events
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Locations" asp-action="Index">
                                    <i class="bi bi-geo-alt me-2"></i>Locations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Performers" asp-action="Index">
                                    <i class="bi bi-people me-2"></i>Performers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservations" asp-action="Index">
                                    <i class="bi bi-ticket-perforated me-2"></i>Reservations
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- USER NAVIGATION -->
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Events" asp-action="Index">
                                    <i class="bi bi-calendar-event me-2"></i>Events
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservations" asp-action="My">
                                    <i class="bi bi-bookmark-star me-2"></i>My Reservations
                                </a>
                            </li>
                        </ul>
                    }

                    <!-- Right Side - User Profile + Logout -->
                    <div class="d-flex align-items-center gap-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {

                            <!-- User Profile -->
                            <div class="d-flex align-items-center gap-2 px-3 py-2 rounded-3" style="background: #1a1a1a; border: 1px solid #2a2a2a;">
                                <div class="rounded-circle d-flex align-items-center justify-content-center"
                                     style="width: 32px; height: 32px; background: linear-gradient(135deg, #d946ef, #ec4899);">
                                    <i class="bi bi-person-fill" style="color: white;"></i>
                                </div>
                                <span style="color: #a0a0a0; font-size: 0.9rem;">@User.Identity?.Name</span>
                            </div>

                            <!-- Logout Button -->
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" class="m-0">
                                <button type="submit" class="btn btn-sm btn-secondary">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <!-- Login/Register for guests -->
                            <a class="btn btn-sm btn-secondary" asp-area="Identity" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </a>
                            <a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">
                                <i class="bi bi-person-plus me-2"></i>Register
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="fade-in">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Dark Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <!-- Brand Section -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="d-flex align-items-center mb-3">
                        <div class="d-flex align-items-center justify-content-center rounded-3 me-2"
                             style="width: 48px; height: 48px; background: linear-gradient(135deg, #d946ef, #ec4899);">
                            <span style="font-weight: 800; font-size: 1.75rem; color: white;">N</span>
                        </div>
                        <h4 class="mb-0" style="color: white;">NightOut</h4>
                    </div>
                    <p style="color: #6b7280;">
                        Your gateway to unforgettable nights. Reserve tables at the hottest events in town.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 style="color: white; margin-bottom: 1rem;">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Events" asp-action="Index" style="color: #a0a0a0; text-decoration: none;">
                                <i class="bi bi-arrow-right me-2"></i>Browse Events
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Reservations" asp-action="My" style="color: #a0a0a0; text-decoration: none;">
                                <i class="bi bi-arrow-right me-2"></i>My Reservations
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Privacy" style="color: #a0a0a0; text-decoration: none;">
                                <i class="bi bi-arrow-right me-2"></i>Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4">
                    <h5 style="color: white; margin-bottom: 1rem;">Connect</h5>
                    <div class="d-flex gap-3 mb-3">
                        <a href="#" style="color: #a0a0a0; font-size: 1.5rem; transition: color 0.3s;">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" style="color: #a0a0a0; font-size: 1.5rem; transition: color 0.3s;">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" style="color: #a0a0a0; font-size: 1.5rem; transition: color 0.3s;">
                            <i class="bi bi-twitter"></i>
                        </a>
                    </div>
                    <p style="color: #6b7280;">
                        <i class="bi bi-envelope me-2"></i>support@nightout.com
                    </p>
                </div>
            </div>

            <hr style="border-color: #2a2a2a; margin: 2rem 0;">

            <div class="text-center" style="color: #6b7280;">
                <small>&copy; 2025 NightOut. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>